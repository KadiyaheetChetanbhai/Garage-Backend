{{#> base title="Booking Status Update"}}
  <h2>Booking Status Update</h2>
  
  <p>Hello {{name}},</p>
  
  <div class="alert-box">
    <p><strong>Status:</strong> {{status}}</p>
    <p>{{statusMessage}}</p>
  </div>
  
  <div class="highlight-box">
    <h3 style="margin-top: 0;">Booking Details</h3>
    <p><strong>Booking ID:</strong> {{bookingId}}</p>
    <p><strong>Garage:</strong> {{garageName}}</p>
    <p><strong>Date:</strong> {{date}}</p>
  </div>
  
  {{#if notes}}
  <div>
    <h3>Notes</h3>
    <p>{{notes}}</p>
  </div>
  {{/if}}
  
  <div class="text-center">
    <a href="{{dashboardUrl}}" class="button">View Booking</a>
  </div>
  
  <p>If you have any questions regarding this update, please contact the garage directly.</p>
{{/base}}